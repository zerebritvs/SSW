<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>RegistroServlet</servlet-name>
        <servlet-class>control.RegistroServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InicioSesionServlet</servlet-name>
        <servlet-class>control.InicioSesionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SubirArchivoServlet</servlet-name>
        <servlet-class>control.SubirArchivoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BuscarArchivoServlet</servlet-name>
        <servlet-class>control.BuscarArchivoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddComentarioServlet</servlet-name>
        <servlet-class>control.AddComentarioServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>VisualizarArchivoServlet</servlet-name>
        <servlet-class>control.VisualizarArchivoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ObtenerArchivoServlet</servlet-name>
        <servlet-class>control.ObtenerArchivoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddFavoritoServlet</servlet-name>
        <servlet-class>control.AddFavoritoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegistroServlet</servlet-name>
        <url-pattern>/RegistroServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InicioSesionServlet</servlet-name>
        <url-pattern>/InicioSesionServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SubirArchivoServlet</servlet-name>
        <url-pattern>/SubirArchivoServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BuscarArchivoServlet</servlet-name>
        <url-pattern>/BuscarArchivoServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddComentarioServlet</servlet-name>
        <url-pattern>/AddComentarioServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VisualizarArchivoServlet</servlet-name>
        <url-pattern>/VisualizarArchivoServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ObtenerArchivoServlet</servlet-name>
        <url-pattern>/ObtenerArchivoServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddFavoritoServlet</servlet-name>
        <url-pattern>/AddFavoritoServlet</url-pattern>
    </servlet-mapping>
    <resource-ref>
        <description>MySQL DB Connection Pool</description>
        <res-ref-name>jdbc/alejandriadb</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>
</web-app>
